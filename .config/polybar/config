[module/previous]
type = custom/script
format = <label>
exec = echo ""
line-size = 1
click-left = "playerctl --player=spotify previous"

[module/next]
type = custom/script
format = <label>
label-padding-right = 4
exec = echo ""
line-size = 1
click-left = "playerctl --player=spotify next"

[module/playpause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo ""
hook-2 = echo ""
initial = 1
format-underline = #1db954
line-size = 1
click-left = "playerctl --player=spotify play-pause"

[module/spotify]
